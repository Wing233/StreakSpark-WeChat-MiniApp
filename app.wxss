/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: #f9f9f9;
  color: #333;
  line-height: 1.6;
}

/* 任务卡片样式 */
.task-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.task-card:hover {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transform: translateY(-2rpx);
}

.task-card.completed {
  background-color: #f8f8f8;
}

.task-content {
  flex: 1;
  margin-left: 24rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-description {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.task-completed .task-title,
.task-completed .task-description {
  text-decoration: line-through;
  color: #999;
}

/* 按钮样式 */
.button-primary {
  background-color: #3498db;
  color: white;
  border-radius: 50rpx;
  padding: 22rpx 48rpx;
  font-size: 28rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.2);
  transition: all 0.3s ease;
}

.button-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.15);
}

.button-secondary {
  background-color: #f5f5f5;
  color: #333;
  border-radius: 50rpx;
  padding: 22rpx 48rpx;
  font-size: 28rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.button-secondary:active {
  transform: scale(0.98);
  background-color: #eeeeee;
}

/* 表单样式 */
.form-group {
  margin-bottom: 36rpx;
}

.form-label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #3498db;
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(52, 152, 219, 0.1);
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
  resize: none;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #3498db;
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(52, 152, 219, 0.1);
}

/* 图标样式 */
.icon {
  width: 44rpx;
  height: 44rpx;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx;
}

.loading::after {
  content: '';
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #666;
}

.empty-state-icon {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 30rpx;
  opacity: 0.4;
}

.empty-state-text {
  font-size: 28rpx;
  color: #999;
  line-height: 1.6;
}

/* 分割线 */
.divider {
  height: 12rpx;
  background-color: #f5f5f5;
}

/* 头部标题 */
.header-title {
  font-size: 36rpx;
  font-weight: 600;
  padding: 32rpx;
  text-align: center;
}

/* 状态标签 */
.status-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-top: 12rpx;
  font-weight: 500;
}

.status-completed {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status-pending {
  background-color: #fff3e0;
  color: #ff9800;
}