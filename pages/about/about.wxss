/* 关于页面样式 */
.container {
  padding: 0;
  box-sizing: border-box;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 头部区域 - Logo和基本信息 */
.header-section {
  width: 100%;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.logo-wrapper {
  width: 200rpx;
  height: 200rpx;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.logo-wrapper:active {
  transform: scale(0.96);
}

.app-logo {
  width: 100%;
  height: 100%;
}

/* 应用名称和版本信息 */
.app-name {
  font-size: 44rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.app-version {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: #3498db;
  font-weight: 500;
  text-align: center;
  line-height: 1.5;
}

/* 内容区块样式 */
.content-section {
  width: 90%;
  margin-bottom: 32rpx;
  padding: 48rpx;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.content-section:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 16rpx rgba(0, 0, 0, 0.03);
}

/* 标题样式 */
.section-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 36rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  letter-spacing: 1rpx;
  display: block;
}

/* 文本内容样式 */
.section-text {
  font-size: 32rpx;
  color: #555;
  line-height: 1.8;
  letter-spacing: 0.5rpx;
}

/* 功能列表样式 */
.features-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-top: 8rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
}

.feature-icon {
  color: #3498db;
  margin-right: 24rpx;
  width: 56rpx;
  text-align: center;
  margin-top: 4rpx;
}

.feature-text {
  font-size: 32rpx;
  color: #555;
  line-height: 1.7;
  flex: 1;
}

/* 数据管理样式 */
.data-management {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.archive-btn {
  width: 60%;
  margin: 8rpx 0;
  font-size: 32rpx;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(231, 76, 60, 0.15);
}

.data-tip {
  font-size: 28rpx;
  color: #7f8c8d;
  text-align: center;
  line-height: 1.6;
  padding: 0 20rpx;
}

/* 联系我们样式 */
.contact-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 28rpx;
}

.contact-label {
  font-size: 32rpx;
  color: #555;
  text-align: center;
  line-height: 1.6;
}

.contact-email {
  font-size: 34rpx;
  color: #3498db;
  font-weight: 500;
  text-align: center;
  padding: 16rpx 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.contact-email:active {
  background-color: #e9ecef;
}

/* 底部信息样式 */
.footer {
  margin-top: auto;
  padding: 50rpx 20rpx 30rpx;
  text-align: center;
  width: 100%;
}

.copyright {
  font-size: 26rpx;
  color: #7f8c8d;
  letter-spacing: 0.5rpx;
}

/* 模态框样式优化 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 75%;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  z-index: 1001;
}

.modal-header {
  padding: 36rpx 40rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
}

.modal-body {
  padding: 40rpx;
}

.password-input {
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  width: 100%;
  transition: border-color 0.3s ease;
}

.password-input:focus {
  border-color: #3498db;
}

.modal-footer {
  padding: 0 40rpx 36rpx;
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  font-size: 32rpx;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 46rpx;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .content-section {
    width: 92%;
    padding: 36rpx;
  }
  
  .logo-wrapper {
    width: 180rpx;
    height: 180rpx;
  }
  
  .app-name {
    font-size: 40rpx;
  }
  
  .section-title {
    font-size: 36rpx;
  }
  
  .archive-btn {
    width: 80%;
  }
}

/* 滚动条样式优化 */
::-webkit-scrollbar {
  width: 8rpx;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: #a1a1a1;
}