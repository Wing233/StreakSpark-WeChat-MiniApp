/* 任务列表页面样式 */
.container {
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  padding: 50rpx 0 40rpx;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  display: block;
  letter-spacing: 2rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
  display: block;
}

/* 筛选栏 */
.filter-bar {
  margin-bottom: 36rpx;
}

.filter-tabs {
  display: flex;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 6rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.tab.active {
  background-color: #fff;
  color: #3498db;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  font-weight: 500;
}

/* 任务列表 */
.task-list {
  margin-bottom: 140rpx;
}

/* 任务卡片样式在app.wxss中定义 */
.task-card {
  position: relative;
}

/* 任务选择框 */
.task-checkbox {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.checkbox {
  width: 48rpx;
  height: 48rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  transition: all 0.3s ease;
}

.checkbox:active {
  transform: scale(0.95);
}

.checkbox.checked {
  background-color: #3498db;
  border-color: #3498db;
  box-shadow: 0 2rpx 10rpx rgba(52, 152, 219, 0.2);
}

.checkbox-icon {
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
}

/* 任务时间 */
/* 任务时间样式 */
.task-time {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

.completed-time {
  color: #4caf50;
}

.created-time {
  color: #666666;
}

/* 操作按钮 */
.task-actions {
  margin-left: 20rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 操作菜单 */
.action-menu {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding: 40rpx 0;
  box-shadow: 0 -5rpx 20rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  text-align: center;
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item.delete {
  color: #e74c3c;
}

.menu-item.cancel {
  color: #888;
  background-color: #f8f8f8;
  margin-top: 20rpx;
  border-radius: 30rpx;
  margin: 20rpx 30rpx 0;
  border-bottom: none;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 200rpx 0;
}

.empty-state-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.4;
  margin-bottom: 30rpx;
}

.empty-state-text {
  display: block;
  font-size: 32rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.empty-state-subtext {
  display: block;
  font-size: 26rpx;
  color: #aaa;
}

/* 管理操作区 */
.admin-area {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  z-index: 99;
}

.archive-btn {
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.3);
}

/* 密码弹窗 */
.password-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  background-color: #fff;
  border-radius: 20rpx;
  width: 80%;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-content input {
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
}

.modal-buttons button {
  width: 45%;
  font-size: 28rpx;
}