/* 添加/编辑任务页面样式 */
.container {
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.page-header {
  text-align: center;
  padding: 30rpx 0 40rpx;
  margin-bottom: 10rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  letter-spacing: 1rpx;
}

/* 表单容器 */
.form-container {
  flex: 1;
}

/* 表单组样式 */
.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-label.required::after {
  content: '*';
  color: #e74c3c;
  margin-left: 4rpx;
}

/* 输入框样式 */
.form-input {
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  background-color: #fff;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #3498db;
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(52, 152, 219, 0.1);
}

/* 文本域样式 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx 30rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  background-color: #fff;
  resize: none;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #3498db;
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(52, 152, 219, 0.1);
}

/* 开关组 */
.switch-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 40%;
}

.switch-group text {
  font-size: 28rpx;
  color: #666;
}

/* 错误提示 */
.error-message {
  color: #e74c3c;
  font-size: 26rpx;
  margin-top: -20rpx;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

/* 底部操作按钮 */
.bottom-actions {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.save-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #3498db;
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
}